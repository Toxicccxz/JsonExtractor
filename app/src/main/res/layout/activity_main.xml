<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_select_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择需要翻译的原JSON文件"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_select_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择翻译好的文本文件"
        app:layout_constraintTop_toBottomOf="@id/button_select_file"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/button_select_json"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="再次选择原JSON文件"
        app:layout_constraintTop_toBottomOf="@id/button_select_translation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/button_execute_replacement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="执行替换"
        app:layout_constraintTop_toBottomOf="@id/button_select_json"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>